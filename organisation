#include <stdio.h>

//Especes
typedef struct {
 Hamster,Chien,Chat,Souris
} Especes;

//Date
typedef struct {
  int jour;
  int mois;
  int année;
} Date;

//Animal
typedef struct {
 int identification;
 char* nom;
 Especes especes;
 Date date;
 int poids;
 char* commentaire;
}Animal;

Date constructeur(){
  Date d;
  int test=0;
  d.année=0;

  printf("Veuillez saisir une année");
  do {
       test=scanf("%d",&d.année);
       while(getchar()!='n'){};
  }while(test<=0 || d.année==0);
  return d;
  
